---
import data from '../../data.json';
---
<footer class="footer">
    <div class="line-top"></div>
    <div class="container footer-content">
      <div class="footer-left">
          <span class="logo">VJ_01</span>
          <span class="copyright"> // Â© {new Date().getFullYear()} {data.name.toUpperCase()}</span>
      </div>
      
      <div class="footer-right">
        <a href="https://github.com/Vatsa10" class="social-link" target="_blank">GITHUB</a>
        <a href={data.contact.linkedin} class="social-link" target="_blank">LINKEDIN</a>
        <a href="#" class="social-link">TWITTER / X</a>
      </div>
    </div>
  </footer>
  
  <style>
    .footer {
      padding: 3rem 0;
      background: var(--bg-dark);
      position: relative;
    }
  
    .line-top {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 1px;
        background: linear-gradient(90deg, transparent, var(--border-color), transparent);
    }
  
    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
  
    .logo {
        color: #fff;
        font-family: var(--font-display);
        font-weight: 700;
        margin-right: 1rem;
    }
  
    .copyright {
        font-family: monospace;
        color: var(--text-muted);
        font-size: 0.9rem;
    }
  
    .footer-right {
        display: flex;
        gap: 2rem;
    }
  
    .social-link {
        font-family: monospace;
        font-size: 0.9rem;
        color: var(--text-muted);
        position: relative;
    }
  
    .social-link:hover {
        color: var(--accent-cyan);
    }
    
    .social-link::before {
        content: '[';
        margin-right: 5px;
        opacity: 0;
        transition: opacity 0.3s;
        color: var(--accent-cyan);
    }
    
    .social-link::after {
        content: ']';
        margin-left: 5px;
        opacity: 0;
        transition: opacity 0.3s;
        color: var(--accent-cyan);
    }
    
    .social-link:hover::before,
    .social-link:hover::after {
        opacity: 1;
    } 
  
    @media (max-width: 768px) {
        .footer-content {
            flex-direction: column;
            gap: 2rem;
        }
    }
  </style>
