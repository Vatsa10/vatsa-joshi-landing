---
import data from '../../data.json';
// Get top 6 projects
const projects = data.projects.slice(0, 6);
---
<section id="projects" class="section projects">
  <div class="container">
      <div class="header-group">
        <span class="mono-tag">03 // PROJECTS</span>
        <div class="line"></div>
    </div>
    
    <div class="projects-grid">
      {projects.map((project, index) => (
        <div class="project-card glass-panel group">
          <div class="card-top">
              <span class="project-id">{String(index + 1).padStart(2, '0')}</span>
              <div class="icon-box">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg>
              </div>
          </div>
          
          <div class="card-content">
              <h3 class="project-title">{project.name}</h3>
              <p class="project-desc">{project.description}</p>
              
              <!-- Tech stack inferred or shown as list if available, else just description covers it -->
              <div class="tech-stack-container">
                  {/* JSON doesn't have tech array per project, so we skip or infer. 
                      Let's leave empty for now as description covers it mostly 
                  */}
              </div>
              
              <div class="card-actions">
                  {project.link && project.link.includes('github') && (
                        <a href={project.link} class="action-link" target="_blank" rel="noopener noreferrer">GITHUB</a>
                  )}
                  {project.link && !project.link.includes('github') && (
                        <a href={project.link} class="action-link active" target="_blank" rel="noopener noreferrer">LIVE_VIEW</a>
                  )}
                   {!project.link && (
                       <span class="action-link disabled">CONFIDENTIAL</span>
                   )}
              </div>
          </div>
          
          <div class="hover-corners"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .header-group {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 4rem;
  }

  .mono-tag {
      font-family: monospace;
      color: var(--accent-cyan);
      font-size: 1.1rem;
  }

  .line {
      height: 1px;
      background: var(--border-color);
      flex: 1;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }

  .project-card {
      padding: 2.5rem;
      transition: transform 0.3s;
      position: relative;
      overflow: hidden;
  }
  
  .project-card:hover {
      transform: translateY(-5px);
  }

  .card-top {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 2rem;
  }

  .project-id {
      font-family: var(--font-display);
      font-size: 4rem;
      font-weight: 700;
      color: rgba(255, 255, 255, 0.03);
      line-height: 0.8;
  }

  .icon-box {
      color: var(--accent-cyan);
  }

  .project-title {
      font-size: 1.5rem;
      margin-bottom: 1rem;
      color: #fff;
  }

  .project-desc {
      color: var(--text-muted);
      margin-bottom: 2rem;
      line-height: 1.6;
      font-size: 0.95rem;
  }

  .tech-stack {
      display: flex;
      gap: 1rem;
      margin-bottom: 2rem;
      flex-wrap: wrap;
  }

  .tech-stack li {
      font-family: monospace;
      font-size: 0.8rem;
      color: var(--accent-cyan);
      background: rgba(0, 243, 255, 0.05);
      padding: 0.25rem 0.5rem;
  }

  .card-actions {
      display: flex;
      gap: 1.5rem;
      margin-top: auto;
  }

  .action-link {
      font-family: monospace;
      font-size: 0.9rem;
      border-bottom: 1px solid transparent;
      padding-bottom: 2px;
  }

  .action-link:hover {
      color: var(--accent-cyan);
      border-bottom-color: var(--accent-cyan);
  }

  .action-link.active {
      color: #fff;
      border-bottom-color: rgba(255,255,255,0.3);
  }
  
  /* Hover Corners Effect */
  .hover-corners {
      position: absolute;
      inset: 0;
      pointer-events: none;
      border: 1px solid transparent;
      transition: all 0.3s;
  }
  
  .project-card:hover .hover-corners {
      border-color: rgba(255,255,255,0.1);
  }

  /* Mobile & Tablet Responsive */
  @media (max-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .project-card {
      padding: 1.5rem;
    }

    .project-id {
      font-size: 0.75rem;
    }

    .project-title {
      font-size: 1.25rem;
    }

    .project-desc {
      font-size: 0.95rem;
    }

    .project-actions {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }
  }

  @media (max-width: 480px) {
    .project-card {
      padding: 1.25rem;
    }

    .project-title {
      font-size: 1.1rem;
    }
  }
</style>
