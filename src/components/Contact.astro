---
import data from '../../data.json';
---
<section id="contact" class="section">
    <div class="container">
      <div class="contact-card glass-panel tech-border">
          <div class="content-wrapper">
              <span class="sub-header">SIGNAL REQUEST</span>
              <h2 class="section-title">Initialize<br>Communication</h2>
              
              <p class="description">
                  My terminal is always open. Whether you have a question about my stack, a project proposal, or just want to discuss the future of AI, send a signal.
              </p>
              
              <a href={`mailto:${data.contact.email}`} class="btn-cyber">TRANSMIT_MESSAGE</a>
          </div>
          
          <div class="visual-decor">
              <div class="grid-lines"></div>
          </div>
      </div>
    </div>
  </section>
  
  <style>
    .contact-card {
        max-width: 900px;
        margin: 0 auto;
        padding: 5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        overflow: hidden;
    }
  
    .content-wrapper {
        max-width: 500px;
        z-index: 2;
    }
  
    .sub-header {
        font-family: monospace;
        color: var(--accent-cyan);
        letter-spacing: 2px;
        font-size: 0.9rem;
        display: block;
        margin-bottom: 1rem;
    }
  
    .section-title {
        font-size: 4rem;
        line-height: 1;
        margin-bottom: 2rem;
    }
  
    .description {
        color: var(--text-muted);
        margin-bottom: 3rem;
        font-size: 1.1rem;
        line-height: 1.6;
    }
    
    .visual-decor {
        position: absolute;
        right: 0;
        top: 0;
        height: 100%;
        width: 40%;
        background: radial-gradient(circle at center, rgba(0, 243, 255, 0.05), transparent 70%);
        pointer-events: none;
    }
  
    @media (max-width: 768px) {
        .contact-card {
            padding: 3rem 1.5rem;
            flex-direction: column;
            text-align: center;
        }
        
        .section-title {
            font-size: 3rem;
        }
    }
  </style>
