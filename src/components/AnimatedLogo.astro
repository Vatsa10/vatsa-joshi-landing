<div class="logo-container">
  <svg
    viewBox="0 0 450 450"
    xmlns="http://www.w3.org/2000/svg"
    class="animated-logo"
  >
    <path
      d="M321.955 420L179.465 127.143L224.998 36.1755L416.91 420H321.955ZM204.867 263.253L128.055 420H33.0897L158.769 168.608L204.867 263.253Z"
      stroke-width="15"
      class="logo-path"
    />
  </svg>
</div>

<style>
  .logo-container {
    width: 50px;
    height: 50px;
  }

  .animated-logo {
    width: 100%;
    height: 100%;
    stroke: var(--accent-cyan, #00f3ff);
    transform: rotate(180deg);
  }

  .logo-path {
    fill: transparent;
    stroke-dasharray: 1500; /* Approximate length covering the whole path */
    stroke-dashoffset: 1500;
    animation: 
      draw 3s ease-in-out forwards,
      fill-in 3s ease-in-out forwards;
  }

  @keyframes draw {
    to {
      stroke-dashoffset: 0;
    }
  }

  @keyframes fill-in {
    0%, 70% {
      fill: transparent;
    }
    100% {
      fill: var(--accent-cyan, #00f3ff);
    }
  }
</style>

<script>
  // Optional: Dynamic calculation of path length for perfect precision
  // This runs on the client to ensure the animation is exact regardless of SVG size scaling
  const path = document.querySelector('.logo-path') as SVGPathElement;
  if (path) {
    const length = path.getTotalLength();
    path.style.strokeDasharray = length.toString();
    path.style.strokeDashoffset = length.toString();
    
    // Trigger reflow to restart animation with correct length if needed, 
    // or just let the CSS handling it with the large approximate value (1500 is likely sufficient for this simple shape)
    // For this specific path, 1500 is safe.
  }
</script>
