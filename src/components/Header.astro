---
import AnimatedLogo from './AnimatedLogo.astro';
---
<header class="header">
  <div class="nav-wrapper glass-panel">
    <a href="#hero" class="logo-link" aria-label="Home">
        <AnimatedLogo />
    </a>
    
    <nav class="nav">
      <ul class="nav-list">
        <li><a href="#about" class="nav-link" data-text="ABOUT">ABOUT</a></li>
        <li><a href="#projects" class="nav-link" data-text="WORKS">WORKS</a></li>
        <li><a href="#experience" class="nav-link" data-text="LOGS">LOGS</a></li>
        <li><a href="#contact" class="nav-link" data-text="CONTACT">CONTACT</a></li>
      </ul>
    </nav>

    <div class="status-indicator">
      <span class="status-dot"></span>
      <span class="status-text">ONLINE</span>
    </div>
    
    <!-- Mobile Trigger -->
    <button class="mobile-menu-btn" aria-label="Menu" id="menuToggle">
      <span class="line"></span>
      <span class="line"></span>
    </button>
  </div>

  <!-- Mobile Overlay -->
  <div class="mobile-overlay" id="mobileOverlay">
    <nav class="mobile-nav">
      <ul class="mobile-nav-list">
        <li><a href="#about" class="mobile-link" data-text="ABOUT">ABOUT</a></li>
        <li><a href="#projects" class="mobile-link" data-text="WORKS">WORKS</a></li>
        <li><a href="#experience" class="mobile-link" data-text="LOGS">LOGS</a></li>
        <li><a href="#contact" class="mobile-link" data-text="CONTACT">CONTACT</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 2rem;
    left: 0;
    width: 100%;
    z-index: 100;
    display: flex;
    justify-content: center;
    padding: 0 1rem;
    pointer-events: none; /* Let clicks pass through outside navbar */
  }

  .nav-wrapper {
    pointer-events: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 2rem;
    border-radius: 100px;
    width: 100%;
    max-width: 800px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    border: 1px solid rgba(255, 255, 255, 0.08);
    position: relative;
    z-index: 102;
    background: rgba(10, 10, 10, 0.8);
    backdrop-filter: blur(10px);
  }

  .logo-link {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .nav-list {
    display: flex;
    gap: 2.5rem;
  }

  .nav-link {
    font-family: var(--font-display);
    font-size: 0.9rem;
    color: var(--text-muted);
    position: relative;
    overflow: hidden;
    display: inline-block;
    letter-spacing: 1px;
    transition: color 0.3s;
  }

  .nav-link::before {
    content: attr(data-text);
    position: absolute;
    top: 100%;
    left: 0;
    color: var(--accent-cyan);
    transition: top 0.3s;
  }

  .nav-link:hover {
    color: transparent;
  }

  .nav-link:hover::before {
    top: 0;
  }

  .status-indicator {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: monospace;
    font-size: 0.7rem;
    color: var(--accent-lime);
    border: 1px solid rgba(191, 255, 0, 0.3);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    background: rgba(191, 255, 0, 0.05);
  }

  .status-dot {
    width: 6px;
    height: 6px;
    background: var(--accent-lime);
    border-radius: 50%;
    box-shadow: 0 0 10px var(--accent-lime);
    animation: blink 2s infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    flex-direction: column;
    gap: 6px;
    cursor: pointer;
    z-index: 103;
  }
  
  .line {
    display: block;
    width: 24px;
    height: 2px;
    background-color: #fff;
    transition: all 0.3s ease;
  }

  /* Mobile Overlay Styles */
  .mobile-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: var(--bg-dark);
    z-index: 101;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s ease;
  }
  
  .mobile-overlay.active {
    opacity: 1;
    pointer-events: all;
  }

  .mobile-nav-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    text-align: center;
  }

  .mobile-link {
    font-family: var(--font-display);
    font-size: 2rem;
    color: var(--text-muted);
    text-transform: uppercase;
    transition: color 0.3s;
  }

  .mobile-link:hover {
    color: var(--accent-cyan);
  }

  /* Active state for hamburger button */
  .mobile-menu-btn.active .line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 6px);
  }
  
  .mobile-menu-btn.active .line:nth-child(2) {
    transform: rotate(-45deg) translate(5px, -6px);
  }

  @media (max-width: 768px) {
    .header {
        top: 1rem;
    }
    .nav {
      display: none;
    }
    .status-indicator {
      display: none;
    }
    .mobile-menu-btn {
      display: flex;
    }
  }
</style>

<script>
  const menuBtn = document.getElementById('menuToggle');
  const mobileOverlay = document.getElementById('mobileOverlay');
  const mobileLinks = document.querySelectorAll('.mobile-link');

  if (menuBtn && mobileOverlay) {
    menuBtn.addEventListener('click', () => {
      menuBtn.classList.toggle('active');
      mobileOverlay.classList.toggle('active');
      document.body.style.overflow = mobileOverlay.classList.contains('active') ? 'hidden' : ''; // Prevent scrolling
    });

    // Close menu when a link is clicked
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        menuBtn.classList.remove('active');
        mobileOverlay.classList.remove('active');
        document.body.style.overflow = '';
      });
    });
  }
</script>
