---
import TechVisual from './TechVisual.astro';
import data from '../../data.json';
---
<section id="hero" class="hero section">
  <div class="grid-overlay"></div>
  
  <!-- TechVisual is now fixed background via its own component style -->
  <TechVisual />

  <div class="container hero-container">
    <div class="hero-spacer"></div> <!-- Empty space for Ring Animation -->
    
    <div class="hero-content">
      <div class="code-badge">
        <span class="bracket">[</span> SYSTEM ONLINE <span class="bracket">]</span>
      </div>
      
      <h1 class="glitch-title" data-text={data.name.toUpperCase()}>
        {data.name.toUpperCase()}
      </h1>
      
      <div class="role-scroller">
        <span class="role">CREATIVE TECHNOLOGIST</span>
      </div>
      
      <p class="hero-desc">
        {data.summary}
      </p>

      <div class="cta-group">
        <a href="#projects" class="btn-cyber">View_Projects</a>
        <a href="#contact" class="link-minimal">:: Get_In_Touch</a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 250vh; /* Long scroll area to allow animation to play out */
    position: relative;
    overflow: visible; 
  }

  .grid-overlay {
      position: absolute;
      inset: 0;
      height: 100vh; /* Only overlay first screen */
      background-image: linear-gradient(rgba(0, 243, 255, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 243, 255, 0.03) 1px, transparent 1px);
      background-size: 100px 100px;
      mask-image: radial-gradient(circle at center, black 40%, transparent 80%);
      pointer-events: none;
      z-index: 1;
  }

  .hero-container {
    position: relative;
    z-index: 2;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center; 
    text-align: center;
  }

  .hero-spacer {
    height: 100vh; /* First screen is purely for seeing the Ring */
    width: 100%;
  }

  .hero-content {
    min-height: 100vh; /* Text appears on the second screen */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    opacity: 0; 
    /* Reveal animation as it enters viewport */
    animation: fadeIn 1s ease-out forwards;
    animation-timeline: view();
    animation-range: entry 10% cover 50%;
  }
  
  @keyframes fadeIn {
      from { opacity: 0; transform: translateY(50px); }
      to { opacity: 1; transform: translateY(0); }
  }

  .code-badge {
    font-family: monospace;
    color: var(--accent-cyan);
    font-size: 0.9rem;
    margin-bottom: 2rem;
    letter-spacing: 2px;
  }

  .bracket {
    color: #fff;
    opacity: 0.5;
  }

  .glitch-title {
    font-size: 8rem; 
    line-height: 0.9;
    letter-spacing: -4px;
    margin-bottom: 1.5rem;
    position: relative;
    color: #fff;
    text-transform: uppercase;
  }

  /* Glitch Effect */
  .glitch-title::before,
  .glitch-title::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--bg-dark); 
  }

  .glitch-title::before {
    left: 2px;
    text-shadow: -1px 0 #ff00c1;
    clip: rect(24px, 550px, 90px, 0);
    animation: glitch-anim 3s infinite linear alternate-reverse;
  }

  .glitch-title::after {
    left: -2px;
    text-shadow: -1px 0 #00fff9;
    clip: rect(85px, 550px, 140px, 0);
    animation: glitch-anim 2s infinite linear alternate-reverse;
  }

  @keyframes glitch-anim {
    0% { clip: rect(10px, 9999px, 30px, 0); }
    20% { clip: rect(80px, 9999px, 100px, 0); }
    40% { clip: rect(10px, 9999px, 50px, 0); transform: skew(0.5deg); }
    60% { clip: rect(30px, 9999px, 60px, 0); transform: skew(0deg); }
    80% { clip: rect(60px, 9999px, 90px, 0); }
    100% { clip: rect(90px, 9999px, 10px, 0); }
  }

  .role {
    display: block;
    font-size: 1.5rem;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
    padding: 0.5rem 2rem;
    margin-bottom: 2rem;
    color: var(--text-muted);
    font-family: monospace;
    letter-spacing: 4px;
    border-top: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
  }

  .hero-desc {
    font-size: 1.2rem;
    color: var(--text-muted);
    max-width: 600px;
    margin-bottom: 3rem;
    line-height: 1.8;
  }

  .cta-group {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .link-minimal {
    font-family: monospace;
    color: #fff;
    font-size: 1.1rem;
    transition: color 0.3s;
  }

  .link-minimal:hover {
    color: var(--accent-cyan);
  }

  @media (max-width: 968px) {
    .glitch-title {
        font-size: 4rem;
    }
    .hero-spacer {
        height: 80vh;
    }
  }
</style>
