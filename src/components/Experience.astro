---
import data from '../../data.json';
---
<section id="experience" class="section">
    <div class="container">
        <div class="header-group">
            <span class="mono-tag">02 // WORK_EXPERIENCE</span>
            <div class="line"></div>
        </div>

        <div class="timeline-container">
            {data.work_experience.map((job) => (
                <div class="timeline-item">
                    <div class="timeline-marker">
                        <div class="marker-dot"></div>
                        <div class="marker-line"></div>
                    </div>
                    <div class="timeline-content glass-panel">
                        <span class="date-badge">{job.duration}</span>
                        <h3 class="role-title">{job.title} <span class="company">@ {job.company}</span></h3>
                        <div class="role-desc">
                             {job.responsibilities ? (
                                 <ul class="job-responsibilities">
                                    {job.responsibilities.map(resp => <li>{resp}</li>)}
                                 </ul>
                             ) : (
                                <p>Contributed to development and maintenance of core systems.</p>
                             )}
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    /* Existing styles remain, adding specific styles for the list */
    .header-group {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 4rem;
  }
/* ... rest of existing CSS ... */
    .job-responsibilities {
        margin-left: 1rem;
        list-style-type: disc;
        color: var(--text-muted);
    }
    .job-responsibilities li {
        margin-bottom: 0.5rem;
        padding-left: 0.5rem;
    }
    
    .job-responsibilities li::marker {
        color: var(--accent-cyan);
    }


  .mono-tag {
      font-family: monospace;
      color: var(--accent-cyan);
      font-size: 1.1rem;
  }

  .line {
      height: 1px;
      background: var(--border-color);
      flex: 1;
  }

  .timeline-container {
      max-width: 800px;
      margin: 0 auto;
      padding-left: 2rem;
  }

  .timeline-item {
      display: grid;
      grid-template-columns: 50px 1fr;
      margin-bottom: 0;
  }

  .timeline-marker {
      display: flex;
      flex-direction: column;
      align-items: center;
  }

  .marker-dot {
      width: 12px;
      height: 12px;
      background: var(--bg-dark);
      border: 2px solid var(--accent-cyan);
      border-radius: 50%;
      margin-top: 1.5rem;
      z-index: 2;
  }

  .marker-line {
      width: 1px;
      background: linear-gradient(to bottom, var(--accent-cyan), transparent);
      flex: 1;
      margin-top: 5px;
      min-height: 100px;
  }

  .timeline-content {
      padding: 2rem;
      margin-bottom: 2rem;
      position: relative;
      transition: all 0.3s;
  }
  
  .timeline-content:hover {
      background: rgba(255, 255, 255, 0.04);
      border-left: 2px solid var(--accent-cyan);
  }

  .date-badge {
      display: inline-block;
      font-family: monospace;
      color: var(--accent-cyan);
      font-size: 0.8rem;
      margin-bottom: 0.5rem;
      border: 1px solid rgba(0, 243, 255, 0.2);
      padding: 0.2rem 0.5rem;
  }

  .role-title {
      font-size: 1.5rem;
      margin-bottom: 1rem;
  }

  .company {
      color: var(--text-muted);
      font-weight: 400;
  }

  .role-desc {
      color: var(--text-muted);
      line-height: 1.6;
  }

  /* Mobile & Tablet Responsive */
  @media (max-width: 768px) {
    .timeline-marker {
      width: 12px;
      height: 12px;
      left: -6px;
    }

    .timeline-content {
      padding: 1.5rem;
      margin-left: 1.5rem;
    }

    .date-badge {
      font-size: 0.75rem;
    }

    .role-title {
      font-size: 1.25rem;
    }

    .role-desc {
      font-size: 0.95rem;
    }
  }

  @media (max-width: 480px) {
    .timeline-content {
      padding: 1.25rem;
      margin-left: 1rem;
    }

    .role-title {
      font-size: 1.1rem;
    }
  }
</style>
